{
    "info": {
      "name": "Sensor API – Obtener node_id",
      "description": "Colección mínima para crear un nodo y listar nodos y así copiar el node_id",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
      "_postman_id": "e3f4a5b6-7890-12cd-ef34-567890abcdef"
    },
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:8000",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Crear Nodo",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"nombre\": \"ESP32-Sala\",\n  \"ubicacion\": \"Primer piso\",\n  \"habitacion\": \"Sala\",\n  \"temp_umbral\": 25.0,\n  \"co_umbral\": 2000,\n  \"mix_ratio\": 0.5\n}"
          },
          "url": {
            "raw": "{{base_url}}/nodes",
            "host": ["{{base_url}}"],
            "path": ["nodes"]
          }
        },
        "response": []
      },
      {
        "name": "Listar Nodos",
        "request": {
          "method": "GET",
          "url": {
            "raw": "{{base_url}}/nodes",
            "host": ["{{base_url}}"],
            "path": ["nodes"]
          }
        },
        "response": []
      }
    ]
  }
  